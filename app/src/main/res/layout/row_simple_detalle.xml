<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout9"
        android:layout_alignParentTop="true"
        android:columnCount="3"
        android:rowCount="3"
        android:useDefaultMargins="false"
        android:rowOrderPreserved="false"
        android:longClickable="false"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:columnOrderPreserved="true"
        android:clickable="false"
        android:layout_alignParentStart="false"
        android:layout_gravity="left|center"
        android:layout_marginLeft="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name producto"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textEstatus"
            android:layout_alignBottom="@+id/textEstatus"
            android:layout_toRightOf="@+id/textEstatus"
            android:gravity="right"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_marginLeft="5dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cant. pedida: "
            android:id="@+id/textView80"
            android:layout_toEndOf="@+id/textEstatus"
            android:layout_below="@+id/textEstatus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cantidad pedida text"
            android:id="@+id/textView5"
            android:layout_alignTop="@+id/textView80"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView82"
            android:layout_toEndOf="@+id/textView82"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cant. surtida: "
            android:id="@+id/textView82"
            android:layout_below="@+id/textView80"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="cantidad surtida text"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView82"
            android:layout_toEndOf="@+id/textView82"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="#00000000"
            android:layout_alignWithParentIfMissing="false"
            android:src="@drawable/select_product"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/gridLayout5"
            android:layout_alignStart="@+id/gridLayout5"
            android:layout_gravity="right"
            android:layout_marginRight="10dp" />
    </GridLayout>
</RelativeLayout>