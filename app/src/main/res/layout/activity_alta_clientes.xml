<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff3b3b3b">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:columnCount="3"
        android:rowCount="6"
        android:rowOrderPreserved="true"
        android:useDefaultMargins="false"
        android:columnOrderPreserved="true"
        android:layout_toEndOf="@android:id/content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre:"
            android:id="@+id/textView77"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginRight="5dp"
            android:textColor="#ffffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText7"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/background_txtfile"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:maxLength="30"
            android:maxLines="2"
            android:inputType="textCapCharacters"
            android:paddingStart="4dp"
            android:paddingEnd="1dp"
            tools:ignore="NewApi"
            android:layout_columnSpan="2"
            android:maxWidth="19dp"
            android:enabled="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="E-mail:"
            android:id="@+id/textView78"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#ffffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText8"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/background_txtfile"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:paddingStart="4dp"
            tools:ignore="NewApi,RtlSymmetry"
            android:layout_columnSpan="2"
            android:maxWidth="19dp"
            android:enabled="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="R.F.C:"
            android:id="@+id/textView79"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#ffffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText9"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/background_txtfile"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:inputType="textCapCharacters"
            android:maxLength="13"
            android:paddingStart="4dp"
            tools:ignore="NewApi,RtlSymmetry"
            android:layout_columnSpan="2"
            android:maxWidth="19dp"
            android:enabled="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TelÃ©fono:"
            android:id="@+id/textView80"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#ffffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText10"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/background_txtfile"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:inputType="number"
            android:numeric="integer"
            android:paddingStart="4dp"
            tools:ignore="NewApi,RtlSymmetry"
            android:layout_columnSpan="2"
            android:maxWidth="19dp"
            android:maxLength="10"
            android:enabled="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:layout_row="0"
            android:layout_column="2" />

    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/gridLayout2"
        android:layout_alignStart="@+id/gridLayout2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Siguiente"
            android:id="@+id/button6"
            android:background="@drawable/bluebutton"
            android:textColor="#ffffffff"
            android:enabled="true"
            android:layout_toStartOf="@+id/button9"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/button9"
            android:layout_weight="1"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Limpiar"
            android:id="@+id/button9"
            android:background="@drawable/bluebutton"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/button6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
</RelativeLayout>