<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.marzam.com.appventas.Tab_pedidos.pcabecera"
    android:weightSum="1"
    android:background="#3b3b3b">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout3"
        android:layout_alignParentTop="true"
        android:columnCount="2"
        android:rowCount="8"
        android:useDefaultMargins="true"
        android:rowOrderPreserved="false"
        android:longClickable="false"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:columnOrderPreserved="false"
        android:clickable="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/Nopedido"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="P687697979"
            android:id="@+id/textView9"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fecha pedido:"
            android:id="@+id/textView7"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView25"
            android:layout_above="@+id/textView8"
            android:layout_alignRight="@+id/textView9"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tipo de orden:"
            android:id="@+id/textView8"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_row="2"
            android:layout_column="0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_row="2"
            android:layout_column="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView9"
                android:background="@drawable/background_txtfile" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:src="@drawable/arrow"
                android:background="#00000000"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/imageView9"
                android:layout_alignEnd="@+id/imageView9" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:theme="@android:style/Theme.Holo.Light"
                android:layout_alignRight="@+id/imageView9"
                android:layout_alignEnd="@+id/imageView9"
                android:layout_alignLeft="@+id/imageView9"
                android:layout_alignBottom="@+id/imageView9"
                android:background="#00FFFFFF" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="No. Orden:"
            android:id="@+id/textView6"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_below="@+id/spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView76"
            android:layout_gravity="center_vertical"
            android:layout_row="3"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/background_txtfile"
            android:maxWidth="19dp"
            android:singleLine="true"
            android:paddingLeft="4dp"
            tools:ignore="RtlSymmetry"
            android:maxLength="16" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/background_txtfile"
            android:singleLine="true"
            android:paddingLeft="4dp"
            android:maxWidth="19dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Contrato:"
            android:id="@+id/textView56"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_row="5"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView77"
            android:layout_gravity="center_vertical"
            android:layout_row="7"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Fianza:"
            android:id="@+id/textView57"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_below="@+id/textView56"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_row="4"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:layout_row="5"
            android:layout_column="1"
            android:background="@drawable/background_txtfile"
            android:singleLine="true"
            android:paddingLeft="4dp"
            android:maxWidth="19dp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText5"
            android:layout_row="6"
            android:layout_column="1"
            android:background="@drawable/background_txtfile"
            android:singleLine="true"
            android:paddingLeft="4dp"
            android:maxWidth="19dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Licitación:"
            android:id="@+id/textView4"
            android:layout_row="6"
            android:layout_column="0"
            android:textColor="#ffffff" />

    </GridLayout>

</RelativeLayout>
