<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.marzam.com.appventas.AltaClientesDr.Direccion"
    android:background="#3b3b3b">


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnCount="5"
        android:rowCount="12"
        android:background="#3b3b3b"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/gridLayout3"
        android:layout_above="@+id/button7">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/background_txtfile"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:paddingStart="4dp"
            android:singleLine="true"
            android:numeric="integer"
            tools:ignore="NewApi,RtlSymmetry"
            android:maxLength="5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="*Colonia:"
            android:id="@+id/textView81"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" *C.P:"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/autoCompleteTextView"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/background_txtfile"
            android:layout_marginBottom="10dp"
            android:maxWidth="19dp"
            android:paddingStart="4dp"
            tools:ignore="NewApi,RtlSymmetry"
            android:maxLength="30"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="*Calle:"
            android:id="@+id/textView82"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText12"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/background_txtfile"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:maxWidth="19dp"
            android:paddingStart="4dp"
            tools:ignore="NewApi,RtlSymmetry"
            android:inputType="textCapCharacters"
            android:paddingTop="3dp"
            android:maxLength="50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="*Num. Ext:"
            android:id="@+id/textView83"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText13"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/background_txtfile"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:maxWidth="19dp"
            android:paddingStart="4dp"
            tools:ignore="NewApi,RtlSymmetry"
            android:inputType="textCapCharacters" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" Num. Int:"
            android:id="@+id/textView84"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText14"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/background_txtfile"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:maxWidth="19dp"
            android:paddingStart="4dp"
            tools:ignore="NewApi,RtlSymmetry"
            android:inputType="textCapCharacters" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" Referencias"
            android:id="@+id/textView85"
            android:layout_row="7"
            android:layout_column="0"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText11"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_rowSpan="5"
            android:background="@drawable/background_txtfile"
            android:lines="4"
            android:paddingStart="4dp"
            tools:ignore="NewApi,RtlSymmetry"
            android:singleLine="false"
            android:textAlignment="textStart"
            android:gravity="start"
            android:maxWidth="19dp" />

    </GridLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:text="Guardar"
        android:id="@+id/button7"
        android:textColor="#ffffff"
        android:background="@drawable/bluebutton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/gridLayout3"
        android:layout_alignEnd="@+id/gridLayout3"
        android:layout_alignLeft="@+id/gridLayout3"
        android:layout_alignStart="@+id/gridLayout3" />

</RelativeLayout>
