<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_weight="1">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:id="@+id/gridLayout11"
            android:columnOrderPreserved="false"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_marginBottom="3dp">

            <TextView
                android:id="@+id/idTxtDevFullNumInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:background="#00000000"
                android:text="Num de factura"
                android:layout_column="0"
                android:layout_row="0" />

            <TextView
                android:id="@+id/idTxtDevFullDateInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#79000000"
                android:background="#00000000"
                android:text="dd/mm/yy"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="bottom|right">

                <TextView
                    android:id="@+id/textView111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#79000000"
                    android:background="#00000000"
                    android:text="Productos:"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:gravity="right"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/idTxtDevFullNumProducts"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="#79000000"
                    android:background="#00000000"
                    android:text="500"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:gravity="center_vertical"
                    android:layout_weight="0" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right">

                <ImageView android:id="@+id/idImgIconListProduct"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/invoice_ico"
                    android:layout_marginTop="3dp" />
            </LinearLayout>

        </GridLayout><![CDATA[

        />
    ]]>
    </RelativeLayout>
</LinearLayout>