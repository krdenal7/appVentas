<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B"
    tools:context=".DevolucionesFull.Productos.DevolucionesFullProductList">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/linearLayout4"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#7D7E7d">

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:id="@+id/idGridDevFullReasonToReturn"
                android:columnOrderPreserved="false"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false">

                <TextView
                    android:id="@+id/textView106"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="left|bottom|right"
                    android:layout_alignWithParentIfMissing="false"
                    android:background="#00000000"
                    android:text="Factura:"
                    android:layout_below="@+id/idTxtNumInvoice"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/idTxtDevFullNumInvoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:background="#00000000"
                    android:text="num factura"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_weight="2"
                    android:layout_gravity="left" />

                <TextView
                    android:id="@+id/textView119"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_alignWithParentIfMissing="false"
                    android:background="#00000000"
                    android:text="Motivo:"
                    android:layout_below="@+id/idSetMarzamCode"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:layout_column="0" />

                <TextView
                    android:id="@+id/idTxtDevFullReasonToReturn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="#FFFFFF"
                    android:background="#00000000"
                    android:text="Motivo"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:gravity="center_vertical"
                    android:layout_weight="0" />

            </GridLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignParentBottom="false"
                android:baselineAligned="false"
                android:clickable="false"
                android:layout_centerVertical="true"
                android:id="@+id/idLayoutDevFullReasonToReturn">

                <TextView
                    android:id="@+id/textView99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_alignWithParentIfMissing="false"
                    android:background="#00000000"
                    android:text="Motivo:"
                    android:layout_below="@+id/idSetMarzamCode"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/idTxtDevFullReasonToReturnOnlyProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="#FFFFFF"
                    android:background="#00000000"
                    android:text="Motivo"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:gravity="center_vertical"
                    android:layout_weight="0" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:layout_weight="0.55"
        android:layout_above="@+id/linearLayout8"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/txtDevFullProductss"
            android:id="@+id/textView103"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:layout_gravity="left|center_vertical" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:id="@+id/relativeLayout"
            android:layout_below="@+id/textView103">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView18"
                android:background="@drawable/background_txtfile" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idIconTxtDevFullStartSearch"
                android:src="@drawable/bar_code"
                android:background="#00000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="4dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idIconTxtDevFullCancelSearch"
                android:src="@drawable/exis"
                android:background="#00000000"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="textNoSuggestions"
                android:ems="10"
                android:id="@+id/idEditTxtDevFullInputSearh"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|right"
                android:background="#00000000"
                android:layout_marginRight="40dp"
                android:textStyle="normal"
                android:layout_alignTop="@+id/imageView18"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:imeOptions="actionSearch"
                android:layout_alignBottom="@+id/idIconTxtDevFullStartSearch"
                android:hint="@string/hintDevFullInputSearchProduct"
                android:layout_marginTop="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6.60"
            android:layout_below="@+id/relativeLayout"
            android:layout_above="@+id/linearLayout7">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/idListDevFullProductToReturn"
                android:background="#3B3B3B"
                android:scrollingCache="false"
                android:cacheColorHint="@android:color/white"
                android:fastScrollEnabled="false"
                android:drawSelectorOnTop="false"
                android:clickable="false"
                android:choiceMode="singleChoice"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/txtDevFullNoFoundProductsForDevolution"
                android:id="@+id/idDevFullNoFoundProductsForDevolution"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:background="#7D7E7d"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout7">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:id="@+id/gridLayout12"
                android:columnOrderPreserved="false"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_gravity="right">

                <TextView
                    android:id="@+id/textView101"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="bottom|right"
                    android:layout_alignWithParentIfMissing="false"
                    android:background="#00000000"
                    android:text="Total de productos a devolver:"
                    android:layout_below="@+id/idTxtNumInvoice"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_marginRight="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="#"
                    android:id="@+id/idEditTxtDevFullTotalProductoToReturn"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_columnSpan="2" />

                <TextView
                    android:id="@+id/textView115"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_alignWithParentIfMissing="false"
                    android:background="#00000000"
                    android:text="Devolución acomulada:"
                    android:layout_below="@+id/idSetMarzamCode"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="left"
                    android:layout_marginRight="3dp" />

                <TextView
                    android:id="@+id/textView96"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#00000000"
                    android:text="$"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:gravity="center_vertical"
                    android:layout_weight="0"
                    android:layout_gravity="right" />

                <TextView
                    android:id="@+id/idSetTxtDevFullProductListAvailableReturns"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#00000000"
                    android:text="10,000.00"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:gravity="center_vertical"
                    android:layout_weight="0"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/idTxtDevFullProductListAvailableReturns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="left"
                    android:layout_alignWithParentIfMissing="false"
                    android:background="#00000000"
                    android:text="Devolución disponible:"
                    android:layout_below="@+id/idTxtNumInvoice"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_marginRight="3dp" />

                <TextView
                    android:id="@+id/idTxtDevFullProductListAvailableReturnsSignOfPesos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#00000000"
                    android:text="$"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:gravity="center_vertical"
                    android:layout_weight="0"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="10,000.00"
                    android:id="@+id/idTxtDevFullProductListPriceReturnTotal"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_marginRight="5dp" />
            </GridLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout8"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/btnTextDevFullReturn"
            android:id="@+id/idBtnDevFullInvoiceReturnMainMenu"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:textColor="#FFFFFF"
            android:background="@drawable/bluebutton"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="3dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/btnTextDevFulFinishReturnProduct"
            android:id="@+id/idBtnDevFullFinishReturn"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:textColor="#FFFFFF"
            android:background="@drawable/bluebutton"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="3dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

</RelativeLayout>
