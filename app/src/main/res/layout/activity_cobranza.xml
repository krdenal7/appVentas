<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marzam.com.appventas.Cobranza.ActivitiesCobranza.Cobranza"
    android:background="#3B3B3B">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7D7E7d"
        android:id="@+id/rl_cobranza"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farmacias &quot;Abajeitas&quot;"
            android:id="@+id/txt_cliente"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14dp"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pago parcial:"
                    android:id="@+id/textView91"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtpago_parcial"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:text="0/0" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pago_total"
                    android:id="@+id/textView90"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtpago_total"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:text="0/0" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_spinner"
        android:layout_below="@+id/rl_cobranza"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:background="#7D7E8d"
        android:id="@+id/rl_btn_busqueda">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idSetDevLiteCaptIconSearch"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:background="@drawable/lupa"
            android:layout_centerInParent="true"
            android:layout_alignWithParentIfMissing="false" />

    </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#7D7E8d"
            android:focusableInTouchMode="true">

            <Button
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="@string/tipo_pago"
                android:textColor="#ffffff"
                android:id="@+id/btn_tipo_pago"
                android:background="@drawable/button_select"
                android:textSize="14dp"
                android:paddingRight="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/relativebuscar"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView7"
                    android:background="@drawable/background_txtfile"
                    android:layout_marginLeft="-20dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/idSetDevLiteCaptProductSearch"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical|right"
                    android:background="#00000000"
                    android:layout_marginRight="35dp"
                    android:textStyle="normal"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_buscador"
                    android:imeOptions="actionSearch"
                    android:inputType="number"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idSetDevLiteCaptCancelSearch"
                    android:src="@drawable/exis"
                    android:background="#00000000"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="360dp"
        android:id="@+id/lv_pagos"
        android:background="#3B3B3B"
        android:layout_below="@+id/ll_spinner"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lv_pagos"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_pagos"
        android:background="#7D7E7d">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grid_totales_cobranza"
                android:columnCount="3"
                android:rowCount="3"
                android:useDefaultMargins="false"
                android:rowOrderPreserved="false"
                android:longClickable="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:columnOrderPreserved="true"
                android:clickable="false"
                android:layout_gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_importe"
                    android:id="@+id/textView922"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_cubrir"
                    android:id="@+id/textView944"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textStyle="bold"
                    android:textColor="#ff7727"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_pendiente"
                    android:id="@+id/textView966"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:id="@+id/txt_total_importe"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:textColor="#ffffff"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:id="@+id/txt_total_cubrir"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:textColor="#ff7727"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:id="@+id/txt_total_pendiente"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:textColor="#ffffff"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp" />


            </GridLayout>

    </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="bottom"
                android:visibility="gone">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/btn_confirmar"
                    android:background="@drawable/bluebutton"
                    android:textColor="#ffffff"
                    android:layout_weight="0.5"
                    android:text="Confirmar"
                    android:textSize="14dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/btn_siguiente"
                    android:background="@drawable/bluebutton"
                    android:textColor="#ffffff"
                    android:text="Siguinte"
                    android:layout_weight="0.5"
                    android:visibility="visible"
                    android:textSize="14dp" />


            </LinearLayout>

        </LinearLayout>
</RelativeLayout>
