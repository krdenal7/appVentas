            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Tab_pedidos.pcatalogo"
            android:label="@string/title_activity_catalogo"
            android:screenOrientation="portrait" >
        </activity>

        <receiver
            android:name=".PushNotifications.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.marzam.com.appventas" />
            </intent-filter>
        </receiver>

        <service android:name=".PushNotifications.GCMIntentService" />

        <activity
            android:name=".GPS.Actualizar_Coordenadas"
            android:label="@string/title_activity_actualizar__coordenadas"
            android:screenOrientation="portrait" >
